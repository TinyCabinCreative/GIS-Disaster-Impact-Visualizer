{
    "name": "disaster-impact-visualizer",
    "version": "1.0.0",
    "description": "Real-time North American disaster impact analysis with 3D visualization and PostGIS spatial analysis",
    "private": true,
    "workspaces": [
        "backend",
        "frontend"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": "cd backend && npm run dev",
        "dev:frontend": "cd frontend && npm start",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:build": "docker-compose build",
        "docker:logs": "docker-compose logs -f",
        "db:migrate": "cd database && psql $DATABASE_URL -f migrations/001_initial_schema.sql",
        "db:seed": "cd database && psql $DATABASE_URL -f seeds/infrastructure_seed.sql",
        "db:reset": "docker-compose down -v && docker-compose up -d postgres && sleep 5 && npm run db:migrate && npm run db:seed",
        "test": "npm run test:backend && npm run test:frontend",
        "test:backend": "cd backend && npm test",
        "test:frontend": "cd frontend && npm test",
        "lint": "npm run lint:backend && npm run lint:frontend",
        "lint:backend": "cd backend && npm run lint",
        "lint:frontend": "cd frontend && npm run lint",
        "format": "prettier --write \"**/*.{js,jsx,json,md,css,yml,yaml}\"",
        "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../data-pipeline && pip install -r requirements.txt"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "prettier": "^3.1.1"
    },
    "keywords": [
        "GIS",
        "PostGIS",
        "disaster-management",
        "three.js",
        "spatial-analysis",
        "real-time-data",
        "emergency-response"
    ],
    "author": "Josh Venne (Tiny Cabin Creative)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/TinyCabinCreative/GIS-Disaster-Impact-Visualizer.git"
    }
}