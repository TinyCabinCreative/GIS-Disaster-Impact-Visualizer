# Database Configuration
DATABASE_URL=postgresql://disaster_admin:your_password@localhost:5432/disaster_impact_db

# Backend Server
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:3000

# API Keys - Disaster Data Sources
NASA_FIRMS_API_KEY=your_nasa_firms_key_here
USGS_API_KEY=your_usgs_key_here
NOAA_API_KEY=your_noaa_key_here

# Mapbox (for frontend maps)
MAPBOX_TOKEN=your_mapbox_token_here
REACT_APP_MAPBOX_TOKEN=your_mapbox_token_here

# Frontend API URLs
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_WS_URL=ws://localhost:5000

# Data Pipeline Configuration
FETCH_INTERVAL_MINUTES=5
ENABLE_REAL_TIME_UPDATES=true

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=debug

# JWT/Auth (if implementing authentication)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100